<div class="sessions-new">
<div class="log-in">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: "login-button" %>
  </div>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot password?", new_password_path(resource_name), class: "forgot-password-link" %>
  <% end %>
  <hr>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Create new account", new_registration_path(resource_name), class: "create-account-button" %>
  <% end %>

<% end %>

</div>
</div>